<section id="contact-form" class="contact-form">
    <form class="form-horizontal">
        <div class="form-group">
            <input type="text" class="form-control" id="nameField" placeholder="Twoje imię" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="emailField" placeholder="Twój email" />
        </div>
        <div class="form-group">
            <textarea class="form-control" id="descField" placeholder="Twoje pytania"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Wyślij</button>
    </form>
</section>
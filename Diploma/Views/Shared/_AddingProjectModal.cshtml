<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        @using (@Html.BeginForm("CreateProject", "Project", new { userEmail = @ViewBag.User.Email }, FormMethod.Post, new { @class = "register" }))
        {
            @Html.AntiForgeryToken()

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <h4>Dodaj projekt</h4>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <input type="text" name="Title" class="form-control" id="titleField" placeholder="Tytuł projektu" required />
                        </div>
                        <div class="form-group">
                            <input type="text" name="PromoName" class="form-control" id="promonameField" placeholder="Imię i nazwisko promotora" required />
                        </div>
                        <div class="form-group">
                            <input type="email" name="PromoEmail" class="form-control" id="promolastnameField" placeholder="Email promotora" required />
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="Description" id="projectdescField" placeholder="Opis projektu" maxlength="200" required></textarea>
                        </div>
                        <label>Wyznacz deadline</label>
                        <div class="form-group">
                            <input type="number" name="Day" class="form-control" id="deadlineDayField" placeholder="Dzień" required />
                        </div>
                        <div class="form-group">
                            <input type="number" name="Month" class="form-control" id="deadlineMonthField" placeholder="Miesiąc" required />
                        </div>
                        <div class="form-group">
                            <input type="number" name="Year" class="form-control" id="deadlineYearField" placeholder="Rok" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                    <button class="btn btn-primary" type="submit" name="button">Dodaj projekt</button>
                </div>
            </div>
        }
    </div>

</div>

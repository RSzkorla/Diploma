<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        @using (@Html.BeginForm("CreateTask", "Task", new { id = @ViewBag.Id, userEmail = @ViewBag.UserEmail }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Dodaj nowe zadanie do projektu</h4>
                </div>
                <div class="modal-body">
                    <h4>Dodaj zadanie</h4>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <input type="text" name="Title" class="form-control" id="titleField" placeholder="Tytuł zadania" required />
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="Description" id="projectdescField" placeholder="Opis zadania" maxlength="400" required></textarea>
                        </div>
                        <label>Wyznacz deadline</label>
                        <div class="form-group">
                            <input type="number" name="Day" class="form-control" id="deadlineDayField" placeholder="Dzień" required />
                        </div>
                        <div class="form-group">
                            <input type="number" name="Month" class="form-control" id="deadlineMonthField" placeholder="Miesiąc" required />
                        </div>
                        <div class="form-group">
                            <input type="number" name="Year" class="form-control" id="deadlineYearField" placeholder="Rok" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                    <button class="btn btn-primary" type="submit" name="button">Dodaj zadanie</button>
                </div>
            </div>
        }
    </div>

</div>


@{
    ViewBag.Title = "Dashboard";
}
<section class="body-content">
    <h2>Witaj w centrum dowodzenia @ViewBag.User.FirstName</h2>

    @if (@ViewBag.User.ListOfProjects == null)
    {
        <p>Nic tu nie ma</p>
    }
    else
    {
        <div class="projects-container">
            <button id="btnShowModal" class="btn btn-sm btn-default" data-toggle="modal" data-target="#myModal">
                Dodaj Projekt
                <i class="fas fa-plus"></i>
            </button>


                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Modal Header</h4>
                            </div>
                            <div class="modal-body">
                                <p>Dodaj projekt</p>
                 
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="titleField" placeholder="Tytuł projektu" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="promoemailField" placeholder="Email do promotora" />
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" id="projectdescField" placeholder="Opis projektu" maxlength="200"></textarea>
                                    </div>
                                </form>


                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                                <button class="btn btn-primary" type="submit" name="button">Dodaj projekt</button>
                            </div>
                        </div>

                    </div>
                </div>

         



        </div>
    }
</section>
    
    

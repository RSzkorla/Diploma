
@{
    ViewBag.Title = "Dashboard";
}
<section class="body-content">
    <h2>Witaj w centrum dowodzenia @ViewBag.User.FirstName</h2>

    @if (@ViewBag.User.ListOfProjects == null)
    {
        <button id="btnShowModal" class="btn btn-sm btn-default" data-toggle="modal" data-target="#myModal">
            Dodaj Projekt
            <i class="fas fa-plus"></i>
        </button>
    }
    else
    {
        <div class="projects-container">
            <button id="btnShowModal" class="btn btn-sm btn-default" data-toggle="modal" data-target="#myModal">
                Dodaj kolejny projekt
                <i class="fas fa-plus"></i>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Modal Header</h4>
                        </div>
                        <div class="modal-body">
                            <h4>Dodaj projekt</h4>

                            <form class="form-horizontal">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="titleField" placeholder="Tytuł projektu" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="promonameField" placeholder="Imię promotora" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="promolastnameField" placeholder="Nazwisko promotora" />
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" id="projectdescField" placeholder="Opis projektu" maxlength="200"></textarea>
                                </div>
                                <label>Wyznacz deadline</label>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="deadlineDayField" placeholder="Dzień" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="deadlineMonthField" placeholder="Miesiąc" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="deadlineYearField" placeholder="Rok" />
                                </div>
                            </form>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                            <button class="btn btn-primary" type="submit" name="button">Dodaj projekt</button>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    }
</section>
    
    
    <div class="reminder-container">
        <div class="reminder-todo">
            <h4>
                Rzeczy do zrobienia:
            </h4>
            <div class="reminder-todo-container">
                <!--foreach-->
            </div>
        </div>

        <div class="reminder-stats">

        </div>
    </div>

<section class="protip-slider">
    
        <div class="slide">
            <p>First quote</p>
        </div>
        <div class="slide">
            <p>Second quote</p>
        </div>
        <div class="slide">
            <p>Third quote</p>
        </div>
</section>
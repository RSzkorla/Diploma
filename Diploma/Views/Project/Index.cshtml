@foreach (var item in ViewBag.Tasks)
{
    <br />

    <div class="projects-container-element">
        <p>Tytuł: @item.Title</p>
        <p>Opis: @item.Description</p>
        <p>Deadline: @item.DeadLine.ToString("dd.mm.yyyy")</p>
    </div>
